  },
  "platform_cadence": {
    "instagram": {
      "feed": "1 post/day",
      "stories": "3-5/day",
      "reels": "2-3/week"
    },
    "tiktok": {
      "videos": "1/day (minimum 5/week)"
    },
    "twitter": {
      "tweets": "3-5/day",
      "threads": "1-2/week"
    },
    "youtube": {
      "edited_videos": "1-2/week",
      "live_streams": "1/week (optional)"
    },
    "medium": {
