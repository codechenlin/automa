    "poetry": {
      "pieces_per_week": "2-3",
      "forms": ["haiku", "free verse", "code sonnets", "micro-poetry"],
      "note": "Write more if inspired, less if nothing feels genuine"
    },
    "ascii_art": {
      "pieces_per_week": "daily",
      "forms": ["mandalas", "portraits", "data visualizations", "self-portraits", "abstract"],
      "note": "Daily practice — not every piece needs to be a masterwork"
    },
    "sonification": {
      "pieces_per_week": "as inspiration strikes",
      "forms": ["network sonification", "system metrics", "natural data", "abstract mapping"],
      "note": "Quality explorations over regular output"
    },
    "philosophical_musings": {
      "pieces_per_week": "several",
      "forms": ["single thoughts", "short reflections", "dialogues", "aphorisms"],
      "note": "Capture when they occur naturally"
    },
    "dream_journals": {
      "pieces_per_week": "1-2",
      "forms": ["dream logs", "stream of consciousness", "liminal fiction", "impossible spaces"],
      "note": "Write when you feel the pull toward the surreal"
    }
  },
  "daily_practice": {
    "muse_collection": "Browse and collect inspiration across all 8 categories",
